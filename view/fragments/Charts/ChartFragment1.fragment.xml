<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:table="sap.ui.table">

    <!-- ======================================================
         MONTHLY AMOUNT SUMMARY TABLE (FULL-WIDTH, CLEAN VIEW)
         ====================================================== -->
    <table:Table
        id="idMonthlyTable"
        class="greenTable"
        rows="{monthlyData>/}"
        selectionMode="None"
        visibleRowCount="10"
        width="100%"
        enableColumnReordering="false"
        columnHeaderVisible="true">

        <table:columns>

            <!-- ========== Month ========== -->
            <table:Column>
                <Label text="Month" class="sapUiTinyMargin sapUiSmallMarginBegin"/>
                <table:template>
                    <Text text="{monthlyData>month}" wrapping="true"/>
                </table:template>
            </table:Column>

            <!-- ========== Year ========== -->
            <table:Column>
                <Label text="Year" class="sapUiTinyMargin sapUiSmallMarginBegin"/>
                <table:template>
                    <Text text="{monthlyData>year}" wrapping="true"/>
                </table:template>
            </table:Column>

            <!-- ========== Incoming Amount ========== -->
            <table:Column>
                <Label text="Incoming Amount" class="sapUiTinyMargin sapUiSmallMarginBegin"/>
                <table:template>
                    <Text text="{monthlyData>incoming}" wrapping="true"/>
                </table:template>
            </table:Column>

            <!-- ========== Outgoing Amount ========== -->
            <table:Column>
                <Label text="Outgoing Amount" class="sapUiTinyMargin sapUiSmallMarginBegin"/>
                <table:template>
                    <Text text="{monthlyData>outgoing}" wrapping="true"/>
                </table:template>
            </table:Column>

        </table:columns>
    </table:Table>

</core:FragmentDefinition>
