<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:table="sap.ui.table">

    <!-- ======================================================
         MONTHLY BANK BALANCE TABLE (FULL-WIDTH, CLEAN VIEW)
         ====================================================== -->
    <table:Table
        id="idMonthlyTable"
        class="greenTable"
        rows="{monthlyData>/}"
        selectionMode="None"
        visibleRowCount="10"
        width="100%"
        enableColumnReordering="false"
        columnHeaderVisible="true">

        <table:columns>

            <!-- ========== Month ========== -->
            <table:Column width="33%">
                <Label text="Month" class="sapUiTinyMargin sapUiSmallMarginBegin"/>
                <table:template>
                    <Text text="{monthlyData>month}" wrapping="true"/>
                </table:template>
            </table:Column>

            <!-- ========== Year ========== -->
            <table:Column width="33%">
                <Label text="Year" class="sapUiTinyMargin sapUiSmallMarginBegin"/>
                <table:template>
                    <Text text="{monthlyData>year}" wrapping="true"/>
                </table:template>
            </table:Column>

            <!-- ========== Bank Balance ========== -->
            <table:Column width="34%">
                <Label text="Bank Balance" class="sapUiTinyMargin sapUiSmallMarginBegin"/>
                <table:template>
                    <Text text="{monthlyData>balance}" wrapping="true"/>
                </table:template>
            </table:Column>

        </table:columns>
    </table:Table>

</core:FragmentDefinition>
