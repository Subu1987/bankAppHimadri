<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form" xmlns:viz="sap.viz.ui5.controls" xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
	xmlns:viz.data="sap.viz.ui5.data" xmlns:chart="sap.suite.ui.commons" controllerName="com.infocus.ZBankApp.controller.Home">
	<Page id="page" enableScrolling="true" showNavButton="false" navButtonPress="onNavBack" showFooter="false" titleLevel="H1">
		<customHeader>
			<Bar>
				<contentMiddle>
					<Title text="Bank Application" level="H2" titleStyle="H2" class="customTitleCenter"/>
				</contentMiddle>
			</Bar>
		</customHeader>
		<content>
			<FlexBox id="panelFormBox" direction="Column" height="auto" justifyContent="Center" alignItems="Center"
				class="sapUiTinyMarginTop sapUiSizeCompact">
				<items>
					<!-- ====================== PARAMETERS SECTION ====================== -->
					<FlexBox width="auto" id="inputBoxes" wrap="NoWrap" justifyContent="Center" alignItems="Center">
						<!-- Company Code Dropdown -->
						<HBox id="companyCodeSelectionBox" direction="Column" alignItems="Center" class="sapUiTinyMarginBegin">
							<ComboBox id="_companyCodeComboBoxId" placeholder="Select Company Code" selectedKey="{globalData>/selectedCompanyCode}"
								class="boldText roundedInput" items="{ path: 'companyCodeMasterData>/', templateShareable: false }" tooltip="Select a company code">
								<core:Item key="{companyCodeMasterData>bukrs}" text="{= ${companyCodeMasterData>bukrs} + ' (' + ${companyCodeMasterData>bukrs_name} + ')' }"/>
							</ComboBox>
						</HBox>
						<!-- Bank Account Dropdown -->
						<HBox id="bankAccountSelectionBox" direction="Column" alignItems="Center" visible="true" class="sapUiTinyMarginBegin">
							<ComboBox id="_bankAccountComboBoxId" placeholder="Select Bank Account" selectedKey="{globalData>/selectedBankAccount}"
								class="boldText roundedInput" items="{ path: 'bankAccountMasterData>/', templateShareable: false }" tooltip="Select a bank account">
								<core:Item key="{bankAccountMasterData>bank_name}" text="{bankAccountMasterData>bank_name}"/>
							</ComboBox>
						</HBox>
						<!-- Fiscal Year Dropdown -->
						<HBox id="fiscalYearSelectionBox" direction="Column" alignItems="Center" visible="true" class="sapUiTinyMarginBegin">
							<ComboBox id="_fiscalYearComboBoxId" placeholder="Select Fiscal Year" selectedKey="{globalData>/selectedFiscalYear}"
								class="boldText roundedInput" width="180px" tooltip="Select Fiscal Year" required="true" change="onFiscalYearChange">
								<core:Item key="2020" text="2020"/>
								<core:Item key="2021" text="2021"/>
								<core:Item key="2022" text="2022"/>
								<core:Item key="2023" text="2023"/>
								<core:Item key="2024" text="2024"/>
								<core:Item key="2025" text="2025"/>
								<core:Item key="2026" text="2026"/>
							</ComboBox>
						</HBox>

						<!-- Month Dropdown -->
						<HBox id="monthSelectionBox" direction="Column" alignItems="Center" visible="true" class="sapUiTinyMarginBegin">
							<ComboBox id="_monthComboBoxId" placeholder="Select Month" selectedKey="{globalData>/selectedMonth}" class="boldText roundedInput"
								width="180px" tooltip="Select a month">
								<core:Item key="01" text="January"/>
								<core:Item key="02" text="February"/>
								<core:Item key="03" text="March"/>
								<core:Item key="04" text="April"/>
								<core:Item key="05" text="May"/>
								<core:Item key="06" text="June"/>
								<core:Item key="07" text="July"/>
								<core:Item key="08" text="August"/>
								<core:Item key="09" text="September"/>
								<core:Item key="10" text="October"/>
								<core:Item key="11" text="November"/>
								<core:Item key="12" text="December"/>
							</ComboBox>
						</HBox>
						<!-- Quarter Dropdown -->
						<HBox id="quarterSelectionBox" direction="Column" alignItems="Center" visible="false" class="sapUiTinyMarginBegin">
							<ComboBox id="_quarterComboBoxId" placeholder="Select Quarter" selectedKey="{globalData>/selectedQuarter}" class="boldText roundedInput"
								width="180px" tooltip="Select a quarter">
								<core:Item key="Q1" text="Q1"/>
								<core:Item key="Q2" text="Q2"/>
								<core:Item key="Q3" text="Q3"/>
								<core:Item key="Q4" text="Q4"/>
							</ComboBox>
						</HBox>
						<!-- Action Buttons (Search and Clear) -->
						<HBox id="buttonBox" direction="Row" justifyContent="Center" alignItems="Center">
							<Button id="searchData" icon="sap-icon://feeder-arrow" press="getGLBackendData" class="sapUiTinyMarginBegin" type="Accept"
								tooltip="Execute"/>
							<Button id="clearData" icon="sap-icon://delete" press="clearListData" class="sapUiTinyMarginBegin" type="Reject" tooltip="Clear All Data"/>
							<Button
                                id="themeToggleBtn"
                                text=""
                                icon="sap-icon://lightbulb"
                                press=".onToggleTheme"
                                class="sapUiTinyMarginBegin lightModeIcon"
                                visible="false"
                                tooltip="Switch Theme"/>
						</HBox>
					</FlexBox>
					<!-- ====================== RADIO BUTTON SECTION ====================== -->
					<FlexBox width="auto" id="RadioBtnContainer" wrap="NoWrap" justifyContent="Center" alignItems="Center">
						<!-- ===== Group 1: GL Related Options ===== -->
						<HBox id="radioGroupGL" direction="Row" alignItems="Center" class="sapUiTinyMarginEnd">
							<RadioButtonGroup id="radioBtnGroupGL" columns="2" select="onRadioButtonSelectGL" class="styledRadioGroup">
								<RadioButton id="incomingOutgoingGL" text="Incoming &amp; Outgoing GL"/>
								<RadioButton id="mainGL" text="Main GL"/>
							</RadioButtonGroup>
						</HBox>
						<!-- ===== Group 2: Time Period Options ===== -->
						<HBox id="radioGroupPeriod" direction="Row" alignItems="Center" class="sapUiTinyMarginBegin">
							<RadioButtonGroup id="radioBtnGroupPeriod" columns="3" select="onRadioButtonSelectPeriod" class="styledRadioGroup">
								
								<RadioButton id="monthly" text="Monthly"/>
								<RadioButton id="quarterly" text="Quarterly"/>
								<RadioButton id="yearly" text="Yearly"/>
							</RadioButtonGroup>
						</HBox>
					</FlexBox>
				</items>
			</FlexBox>
			<!-- Panel for normal view -->
			<Panel id="panelIncomingOutgoingViewBox" expandable="false" expanded="false" visible="true" class="sapUiResponsiveMargin"
				backgroundDesign="Solid" width="auto" height="100%">
				<content>
					<!-- IconTabBar for switching between scenarios -->
					<IconTabBar id="iconTabIncomingOutgoingBar" selectedKey="scenario1" select="onTabSelectInOutGL" stretchContentHeight="true" class="beautifulTabBar">
						<items>
							<!-- Scenario 1 -->
							<IconTabFilter key="scenario1" text="Incoming &amp; Outgoing GL (Monthly)" icon="sap-icon://journey-change"
								tooltip="Incoming &amp; Outgoing GL (Monthly)" iconColor="Positive" design="Horizontal" visible="{globalData>/isChartFragment1Visible}">
								<content>
									<VBox visible="{globalData>/isChartFragment1Visible}">
										<core:Fragment id="chartFragment1" fragmentName="com.infocus.ZBankApp.view.fragments.Charts.ChartFragment1" type="XML"/>
									</VBox>
								</content>
							</IconTabFilter>
							<IconTabSeparator/>
							<!-- Scenario 2 -->
							<IconTabFilter key="scenario2" text="Incoming &amp; Outgoing GL (Quaterly)" icon="sap-icon://journey-change"
								tooltip="Incoming &amp; Outgoing GL (Quaterly)" design="Horizontal" visible="{globalData>/isChartFragment2Visible}">
								<content>
									<VBox visible="{globalData>/isChartFragment2Visible}">
										<core:Fragment id="chartFragment2" fragmentName="com.infocus.ZBankApp.view.fragments.Charts.ChartFragment2" type="XML"/>
									</VBox>
								</content>
							</IconTabFilter>
							<!-- Scenario 3 -->
							<IconTabFilter key="scenario3" text="Incoming &amp; Outgoing GL (Yearly)" icon="sap-icon://journey-change"
								tooltip="Incoming &amp; Outgoing GL (Yearly)" design="Horizontal" iconColor="Negative" visible="{globalData>/isChartFragment3Visible}">
								<content>
									<VBox visible="{globalData>/isChartFragment3Visible}">
										<core:Fragment id="chartFragment3" fragmentName="com.infocus.ZBankApp.view.fragments.Charts.ChartFragment3" type="XML"/>
									</VBox>
								</content>
							</IconTabFilter>
						</items>
					</IconTabBar>
				</content>
			</Panel>
			<Panel id="panelMainViewBox" expandable="false" expanded="false" visible="false" class="sapUiResponsiveMargin" backgroundDesign="Solid"
				width="auto" height="100%">
				<content>
					<!-- IconTabBar for switching between scenarios -->
					<IconTabBar id="iconTabMainBar" selectedKey="scenario4" select="onTabSelectMainGL" stretchContentHeight="true" class="beautifulTabBar">
						<items>
							
							<!-- Scenario 4 -->
							<IconTabFilter key="scenario4" text="Main GL (Monthly)" icon="sap-icon://wallet" tooltip="Main GL (Monthly)" iconColor="Critical"
								design="Horizontal" visible="{globalData>/isChartFragment4Visible}">
								<content>
									<!--<VBox visible="{globalData>/isChartFragment4Visible}">
										<core:Fragment id="chartFragment4" fragmentName="com.infocus.ZBankApp.view.fragments.Charts.ChartFragment4" type="XML"/>
									</VBox>-->
								</content>
							</IconTabFilter>
							<IconTabSeparator/>
							<!-- Scenario 5 -->
							<IconTabFilter key="scenario5" text="Main GL (Quaterly)" icon="sap-icon://wallet" tooltip="Main GL (Quaterly)" iconColor="Negative"
								design="Horizontal" visible="{globalData>/isChartFragment5Visible}">
								<content>
									<VBox visible="{globalData>/isChartFragment5Visible}">
										<core:Fragment id="chartFragment5" fragmentName="com.infocus.ZBankApp.view.fragments.Charts.ChartFragment5" type="XML"/>
									</VBox>
								</content>
							</IconTabFilter>
								<!-- Scenario 6 -->
							<IconTabFilter key="scenario6" text="Main GL (Yearly)" icon="sap-icon://wallet" tooltip="Main GL (Quaterly)" iconColor="Negative"
								design="Horizontal" visible="{globalData>/isChartFragment6Visible}">
								<content>
									<VBox visible="{globalData>/isChartFragment6Visible}">
										<core:Fragment id="chartFragment6" fragmentName="com.infocus.ZBankApp.view.fragments.Charts.ChartFragment6" type="XML"/>
									</VBox>
								</content>
							</IconTabFilter>
						</items>
					</IconTabBar>
				</content>
			</Panel>
		</content>
	</Page>
</mvc:View>